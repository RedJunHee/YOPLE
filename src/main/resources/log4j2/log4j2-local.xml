<?xml version="1.0" encoding="UTF-8"?>

<!-- ALL < TRACE < DEBUG < INFO < WARN < ERROR < FATAL < OFF。 -->
<Configuration status="info" monitorIntervalp="600">
    <!--공통 속성 설정 -->
    <Properties>
        <Property name="logFileName">yople-log</Property>
        <Property name="consoleLayout">[%X{logId}] - [%d{yyyy-MM-dd HH:mm:ss}] [%-5p]  [%F(%M) - %L Line] - %m%n</Property>
        <Property name="fileLayout">[%X{logId}] - [%d{yyyy-MM-dd HH:mm:ss}] [%-5p]  [%F(%M) - %L Line] - %m%n</Property>
    </Properties>

    <!-- Log Appender 설정 -->
    <Appenders>

        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="${consoleLayout}" />
        </Console>


        <!-- error 정보 FILE 로그 Appender -->
        <RollingFile name="file_error"
                     fileName="./logs/error/error-${hostName}.log"
                     filePattern="./logs/error/past/error-${hostName}.%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="${fileLayout}" />
            <!--LevelRangeFilter필터를 사용할때에 단일 level의 필터만 허용한다. -->
            <LevelRangeFilter minLevel="ERROR" maxLevel="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" />  <!--1일 단위로 롤링 정책 설정.-->
            </Policies>
            <DefaultRolloverstrategy>
                <Delete basePath="./logs/error/past" maxDepth="1">
                    <IfLastModified age="7d" />  <!--7일 지난 로그는 삭제.-->
                </Delete>
            </DefaultRolloverstrategy>
        </RollingFile>


        <!-- info 정보 FILE 로그 Appender -->
        <RollingFile name="file"
                     fileName="./logs/api/api-${hostName}}.log"
                     filePattern="./logs/api/past/api-${hostName}.%d{yyyy-MM-dd}_%i.log">
            <PatternLayout pattern="${fileLayout}" />
            <LevelRangeFilter minLevel="ERROR" maxLevel="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="10KB" />       <!-- 10KB 단위로 파일 인덱스 롤링 -->
                <TimeBasedTriggeringPolicy interval="1" />      <!-- 1일 단위로 롤링 -->
            </Policies>
            <DefaultRolloverstrategy>
                <Delete basePath="./logs/api/past" maxDepth="1">
                    <IfLastModified age="7d" />  <!--7일 지난 로그는 삭제.-->
                </Delete>
            </DefaultRolloverstrategy>
        </RollingFile>
    </Appenders>

    <!--TRACE > DEBUG > INFO > WARN > ERROR > FATAL -->
    <!--Log가 찍힐 대상 설정.
        additivity = Appender 중첩 Logger에 대해 상위 Logger 무시 옵션. (false = 무시)
    -->
    <Loggers>
        <!-- 스프링 프레임워크에서 찍는건 level을 info로 설정 -->
        <logger name="org.springframework" level="info" additivity="false" >
            <AppenderRef ref="console" />
        </logger>

        <logger name="org.springframework.boot.web.servlet" level="debug" additivity="false" >
            <AppenderRef ref="console" />
        </logger>

        <!-- rolling file에는 debug, console에는 info 분리하 처리 가능하다. -->
        <logger name="com.map.mutual.side" level="debug" additivity="false" >
            <AppenderRef ref="console" />
            <AppenderRef ref="file"/>
            <AppenderRef ref="file_error"/>
        </logger>

        <Root level="info">
            <AppenderRef ref="console" />
        </Root>
    </Loggers>
</Configuration>